	<target name="process">
		<javac debug="true" verbose="true" srcdir="../../src/test/java" destdir="../../target/classes">
			<compilerarg line="-processorpath mapstruct-processor-1.6.3.jar" />
			<compilerarg line="-s ../../target/generated-sources" />
			<classpath>
				<filelist>
					<file name="mapstruct-1.6.3.jar" />
					<file name="mapstruct-processor-1.6.3.jar" />
				</filelist>
			</classpath>
			<include name="**/org/mapstruct/example/**" />
		</javac>
	</target>

</project>